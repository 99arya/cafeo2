<html>
<header>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</header>
<body>
 <!--========================================================================================-->


<div class = "container"> <ul class="list-group">
  <li class="list-group-item active">Order Number : <b><%= bill.ordernumber %> </b></li>
  <li class="list-group-item">Table Number : <b><%= bill.tablenumber %></b></li>
  <li class="list-group-item">Waiter Name : <b><%= bill.waitername %></b></li>
</ul>

 <!--========================================================================================-->

<br><br><form action="/bills/<%= bill._id%>/meals" method="POST">
             <h2 style="text-align: center; " >Add a New Meal to the order number <%= bill.ordernumber %></h2><br>

            <div class="form-group">
                <input class="form-control" type="text" name="meal[mealname]" placeholder="Name of The Meal">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" name="meal[mealprice]" placeholder="Price">
            </div>
            
            <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" >Submit</button>
            </div> 
        </form>
 </div>
 
 
 <!--========================================================================================-->
 <!--SHOW ITEMS IN BILL-->
 <!--========================================================================================-->
 
            <div class = "container"> <ul class="list-group">
                             <% bill.meals.forEach(function(meal){ %>

            <li class="list-group-item"><%= meal.mealname %> -------- Rs. <%= meal.mealprice %></li>
            
                       </ul>             
             <% }); %>           
    
<!--========================================================================================-->
<!--SHOW MEALS-->
<!--========================================================================================-->

 <div class="row text-center" style = "display:flex; flex-wrap:wrap;">
            <% meals.forEach(function(meal){ %>
            <div class="card meal-card" style="width: 15rem;">
                    
                        <h4 class="add" data-price="<%= meal._id  %>"><%= meal._id %></h4>
                      <!--<img class="card-img-top" src="<%=meal.image%>" alt="Card image cap" >-->
                    <div class="card-block">
                        
                        <h6 class="card-title"   data-name="<%= meal.name  %>"> <%= meal.name %> </h6>
                        
                        <p class="card-text"><%= meal.category  %></p>
                        <p><%=  meal.comment %></p>
                        
                
                        <a href="#" data-pric="<%= meal.price  %>"  class="btn btn-primary">Rs. <%= meal.price  %></a>
                        
                      
                    </div>
            </div>
        <% }); %>
    </div>
<!--========================================================================================-->
    
    <div class="newforms" >
        <div class="form-group">
    <a href="/">Go Back</a>
    </div>

    </div>

    
    
    
    
    </body>

<style>
    body{
        padding-top: 5%;
    }
</style>
    

</html>